<UserControl x:Class="DynamoPandas.PandamoNodeModels.Controls.DataframeFormatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
        <DataGrid Name="Dataframe" ItemsSource="{Binding}" IsReadOnly="True" MaxHeight="240" VerticalScrollBarVisibility="Visible"/>
        <Thumb Name ="resizeThumb" 
               Width="15" Height="15" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Bottom" 
               DragDelta="ThumbResizeThumbOnDragDeltaHandler"/>
    </Grid>
</UserControl>
